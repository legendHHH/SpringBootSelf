<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.legend.mybatis.mapper.IOrderMapper">

    <!--resultMap:手动来配置实体属性与表字段的映射关系-->
    <resultMap id="orderMap" type="com.legend.mybatis.pojo.Order">
        <result property="id" column="id"></result>
        <result property="orderTime" column="orderTime"></result>
        <result property="total" column="total"></result>
        <association property="user" javaType="com.legend.mybatis.pojo.User">
            <!--<result property="id" column="id"></result>-->
            <!--可以写成外键的-->
            <result property="id" column="uid"></result>
            <result property="username" column="username"></result>
            <result property="password" column="password"></result>
        </association>
    </resultMap>

    <select id="findOrderAndUser" resultMap="orderMap">
      select * from user u,orders o where u.id=o.uid
    </select>
</mapper>